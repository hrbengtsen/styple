{
  "name": "@styple/website",
  "description": "styple monorepo",
  "version": "1.0.0",
  "private": "true",
  "license": "MIT",
  "workspaces": [
    "packages/design-system",
    "packages/hooks"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "precommit": "pretty-quick --staged && lint-staged",
    "prepare": "husky install",
    "build:clean": "rimraf packages/*/dist",
    "build:packages": "npm run build:clean && parcel build packages/*",
    "release": "npm publish --access public --workspaces"
  },
  "dependencies": {
    "hast-util-to-html": "^8.0.3",
    "hast-util-to-string": "^2.0.0",
    "mdx-bundler": "^8.0.1",
    "next": "^12.1.0",
    "next-themes": "^0.0.15",
    "parse-numeric-range": "^1.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "refractor": "^4.5.0",
    "rehype-parse": "^8.0.4",
    "rehype-slug": "^5.0.1",
    "unified": "^10.1.1",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.3.2",
    "@parcel/transformer-typescript-types": "^2.3.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "eslint": "^8.10.0",
    "eslint-config-next": "^12.1.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-testing-library": "^5.0.5",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "parcel": "^2.3.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix --cache"
  }
}
