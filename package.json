{
  "name": "@styple/website",
  "description": "styple monorepo",
  "version": "1.0.0",
  "private": "true",
  "license": "MIT",
  "workspaces": [
    "packages/design-system",
    "packages/hooks"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "precommit": "pretty-quick --staged && lint-staged",
    "prepare": "husky install",
    "build:clean": "rimraf packages/*/dist",
    "build:packages": "npm run build:clean && parcel build packages/*",
    "release": "npm run build:packages && npm publish --access public --workspaces"
  },
  "dependencies": {
    "hast-util-to-html": "^8.0.3",
    "hast-util-to-string": "^2.0.0",
    "mdx-bundler": "^9.0.1",
    "next": "^12.3.1",
    "next-plausible": "^3.6.3",
    "next-themes": "^0.2.1",
    "parse-numeric-range": "^1.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "refractor": "^4.8.0",
    "rehype-parse": "^8.0.4",
    "rehype-slug": "^5.0.1",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.1"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.7.0",
    "@parcel/transformer-typescript-types": "^2.7.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^28.1.8",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-config-next": "^12.3.1",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-testing-library": "^5.7.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix --cache"
  }
}
